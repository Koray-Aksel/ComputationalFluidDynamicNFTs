body {
    background-color: black;
}

.Screen {
    background-color: var(--primary);
    background-image: url("../images/bg1.jpg");
    background-size: cover;
    background-position: center;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.Container {
    position: absolute;
    z-index: 2;
    margin-top: 80%;
    margin-left: 5%;
    width: 90%;
    height: 40%;
    background-color: slategray;
}
